{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"fmt": {
		"indentWidth": 4,
		"lineWidth": 800,
		"proseWrap": "preserve",
		"semiColons": true,
		"singleQuote": false,
		"useTabs": true
	},
	"imports": {
		"lume/": "https://deno.land/x/lume@v1.19.3/"
	},
	"lint": {
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [
				"eqeqeq",
				"guard-for-in",
				"no-const-assign",
				"no-eval",
				"no-sparse-arrays",
				"no-sync-fn-in-async-fn"
			]
		}
	},
	"lock": false,
	"tasks": {
		"lume": "echo \"import 'lume/cli.ts'\" | deno run --allow-all --unstable -"
	}
}
